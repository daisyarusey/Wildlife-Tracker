{{#partial "content"}}
    <h1>Recorded Animals Sightings</h1>
    <br>
    <br>
    <table class="table table-dark">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Ranger's Name</th>
            <th scope="col">Location</th>
            <th scope="col">Animal Name</th>
            <th scope="col">Animal Type</th>
            <th scope="col">Time of sighting</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{ranger_id}}</td>

                <!--Location of Sighting-->
                <td>{{location}}</td>

                <td>{{animal.name}}</td>
                <td>{{animal.type}}</td>

                <td>{{time_recorded}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/partial}}
{{>layout.hbs}}